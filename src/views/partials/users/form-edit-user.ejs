<!-- Card Profile -->
<div class="row">
  <div class="col-12 col-lg-8 m-auto mb-5">
    <div class="card card-body" id="profile">
      <div class="row justify-content-start align-items-center">
        <div class="col-sm-auto col-4">
          <form
            id="edit-avatar"
            action="/users/<%= user.id %>/edit-avatar?_method=PUT"
            method="post"
            enctype="multipart/form-data"
          >
            <label
              for="avatar_img"
              class="
                avatar avatar-xl
                position-relative
                cursor-pointer
                overflow-hidden
              "
            >
              <input
                id="avatar_img"
                type="file"
                class="d-none"
                onchange="readURL(this);"
                name="avatar"
              />
              <img
                id="preview-avatar"
                src="/assets/img/avatar-user/<%= user.avatar %>"
                alt="<%= user.username %>"
                class="w-10 avatar avatar-xl"
              />
            </label>
          </form>
        </div>
        <div class="col-sm-auto col-8 my-auto">
          <div class="h-100">
            <h5 class="mb-1 font-weight-bolder"><%= user.username %></h5>
            <% if (user.role_id === 1) { %>
            <p class="mb-0 font-weight-bold text-sm">admin</p>
            <% } else if(user.role_id === 2) { %>
            <p class="mb-0 font-weight-bold text-sm">manager</p>
            <% } else if(user.role_id === 3) { %>
            <p class="mb-0 font-weight-bold text-sm">salesclerk</p>
            <% } else { %>
            <p class="mb-0 font-weight-bold text-sm">customer</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Card Basic Info -->
<div class="row">
  <div class="col-12 col-lg-8 m-auto">
    <form
      id="edit-user"
      class="multisteps-form__form mb-2"
      style="height: 265px"
      action="/users/<%= user.id %>/edit?_method=PUT"
      method="post"
    >
      <!--single form panel-->
      <div
        class="
          card
          multisteps-form__panel
          p-3
          border-radius-xl
          bg-white
          js-active
        "
        data-animation="FadeIn"
      >
        <h5 class="font-weight-bolder mb-0">Basic info</h5>
        <div class="multisteps-form__content">
          <div class="row mt-3">
            <div class="row mt-3">
              <div class="col-12 col-sm-6">
                <label for="username">Username</label>
                <input
                  class="multisteps-form__input form-control"
                  type="text"
                  placeholder="eg. Username"
                  name="username"
                  value="<%= user.username %>"
                />
              </div>
              <div class="col-12 col-sm-6 mt-3 mt-sm-0">
                <label for="email">Email</label>
                <input
                  class="multisteps-form__input form-control"
                  type="text"
                  placeholder="eg. Email"
                  name="email"
                  value="<%= user.email %>"
                />
              </div>
            </div>
            <div class="button-row d-flex mt-4">
              <button
                class="btn bg-gradient-dark ms-auto mb-0"
                type="submit"
                title="Send"
              >
                Send
              </button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-12 col-lg-8 m-auto">
    <form
      id="change-password"
      class="multisteps-form__form mb-2"
      style="height: 465px"
      action="/users/<%= user.id %>/change-password?_method=PUT"
      method="post"
    >
      <!--single form panel-->
      <div
        class="
          card
          multisteps-form__panel
          p-3
          border-radius-xl
          bg-white
          js-active
        "
        data-animation="FadeIn"
      >
        <h5 class="font-weight-bolder mb-0">Change your password</h5>
        <div class="multisteps-form__content">
          <div class="row mt-3">
            <div class="col-12 col-sm-12 mt-sm-0">
              <label for="username">Current password</label>
              <input
                id="current_password"
                class="multisteps-form__input form-control"
                type="password"
                placeholder="eg. ******"
                name="current_password"
              />
              <% if (locals.errorCurrentPassword) { %>
              <label
                id="current-password-error"
                class="error"
                for="current_password"
                ><%= locals.errorCurrentPassword.message %></label
              >
              <% } %>
            </div>
            <div class="col-12 col-sm-12 mt-3 mt-sm-0">
              <label for="email">New password</label>
              <input
                id="new_password"
                class="multisteps-form__input form-control"
                type="password"
                placeholder="eg. ******"
                name="new_password"
              />
            </div>
            <div class="col-12 col-sm-12 mt-3 mt-sm-0">
              <label for="email">Confirm new password</label>
              <input
                id="confirm_new_password"
                class="multisteps-form__input form-control"
                type="password"
                placeholder="eg. ******"
                name="confirm_new_password"
              />
            </div>
          </div>
          <div class="button-row d-flex mt-4">
            <button
              class="btn bg-gradient-dark ms-auto mb-0"
              type="submit"
              title="Send"
            >
              update password
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
